<RestaurantList>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    BoxLayout:
        orientation: 'vertical'
        size_hint: (1, 0.8)

        Label:
            text: 'Restaurant List'
            font_size: 30
            bold: True
            size_hint_y: 0.1

        ScrollView:
            GridLayout:
                id: restaurant_list
                cols: 2
                size_hint_y: None
                height: self.minimum_height
                spacing: 5
                padding: 5
                row_default_height: '30dp'
                row_force_default: True
                scroll_type: ['bars']
                canvas.before:
                    Color:
                        rgba: 1,1,1,0.2
                    Rectangle:
                        pos: self.pos
                        size: self.size

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.07)
        spacing: 5

        TextInput:
            id: restaurant_name
            hint_text: 'Enter...'
            multiline: False
            size_hint_x: 0.7
            size_hint_y: 1
            padding: (10, 10)
            background_color: (1, 1, 1, 1)
            foreground_color: (0, 0, 0, 1)
            font_size: 18

        Button:
            text: 'Add'
            size_hint_x: 0.3
            size_hint_y: 1
            on_press: root.add_restaurant()

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.07)

        Button:
            text: 'Choose'
            size_hint_x: 0.3
            size_hint_y: 1
            on_press: root.select_restaurant()

        Label:
            id: selected_restaurant
            text: 'Chosen One'
            size_hint_x: 0.7
            size_hint_y: 1
            font_size: 18

    Button:
        text: 'Delete'
        size_hint: (0.2, 0.06)
        pos_hint: {'right': 1, 'y': 0}
        on_press: root.delete_restaurants()
